<p id="notice"><%= notice %></p>

<h1><%= t('mining_types.table.title') %></h1>
<br/>
<table>
  <thead>
    <tr>
      <th><%= t('mining_types.table.descr') %></th>
      <th><%= t('mining_types.table.acronym') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('links.delete'), mining_type, method: :delete, data: { confirm: t('confirmations.delete_mining_type', deep_interpolation:true, descr: mining_type.description) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.new_mining_type'), new_mining_type_path %>
<p><%= link_to t('links.back'), root_path %></p>
