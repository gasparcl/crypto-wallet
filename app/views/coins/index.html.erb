<p id="notice"><%= notice %></p>

<h1>Crypto Coins</h1>
<br/>
<table>
  <thead>
    <tr>
      <th>Url image</th>
      <th>Description</th>
      <th>Acronym</th>
      <th>Mining type</th>
      <th colspan=3>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= image_tag coin.url_image, height: 35  %></td>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= coin.mining_type.acronym%></td>
        <td><%= link_to 'Show', coin %></td>
        <td><%= link_to 'Edit', edit_coin_path(coin) %></td>
        <td><%= link_to 'Destroy', coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'New Coin', new_coin_path %></p>
<p><%= link_to 'Back', root_path %></p>
