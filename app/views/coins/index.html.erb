<p id="notice"><%= notice %></p>

<h1><%= t('coins.table.title')%></h1>
<br/>
<table>
  <thead>
    <tr>
      <th><%= t('coins.table.url_image')%></th>
      <th><%= t('coins.table.descr')%></th>
      <th><%= t('coins.table.acronym')%></th>
      <th><%= t('coins.table.mining_type')%></th>
      <th colspan=3>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= image_tag coin.url_image, height: 35  %></td>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= coin.mining_type.acronym%></td>
        <td><%= link_to t("links.show"), coin %></td>
        <td><%= link_to t("links.edit"), edit_coin_path(coin) %></td>
        <td><%= link_to t("links.delete"), coin, method: :delete, data: { confirm: t('confirmations.delete_coin', deep_interpolation:true, descr: coin.description) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to t('links.new_coin'), new_coin_path %></p>
<p><%= link_to t('links.back'), root_path %></p>
